{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} pas welcome {% endblock %}
    {% block stylesheets %}{{ parent() }}{% endblock %}
    {% block javascripts %} {{ parent() }} {% endblock %}
{% block body %}
    {{ parent() }}


    <script src="{{ asset('ajax/News.js') }}"></script>
    <form id="form">
    <table class="table table-dark">
        {% for new in news %}

            <tr id="news{{ new.id }}">
                <td>{{ new.titre }}</td>
                <td>{{ new.description }}</td>
                <td><a href="#" onclick="modifyNews({{ new.id }})" ><i class="fa fa-pencil-square-o fa-lg" aria-hidden="false"></i></a></td>
                <td><a href="#" onclick="deleteNews({{ new.id }})" ><i class="fa fa-trash-o fa-lg" aria-hidden="false"></i></a></td>
            </tr>

        {% endfor %}
    </table>
    </form>


{% endblock %}

